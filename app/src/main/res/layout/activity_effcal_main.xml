<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.htharaka.effcal.com.jjm.htharaka.effcal.EffcalMainActivity">

    <TextureView
        android:id="@+id/textureView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp" />

    <ImageButton
        android:id="@+id/btnStop"
        android:contentDescription="@string/video_offline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="38dp"
        android:layout_marginEnd="33dp"
        app:srcCompat="@mipmap/recoffline" />

    <ImageButton
        android:id="@+id/btnStart"
        android:contentDescription="@string/video_online"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnStop"
        android:layout_alignParentStart="true"
        android:layout_marginStart="31dp"
        app:srcCompat="@mipmap/reconline" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:contentDescription="@string/count_online"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnStart"
        android:layout_marginStart="18dp"
        android:layout_toEndOf="@+id/btnStart"
        app:srcCompat="@mipmap/countonline" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:contentDescription="@string/count_offline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnStop"
        android:layout_marginEnd="11dp"
        android:layout_toStartOf="@+id/btnStop"
        app:srcCompat="@mipmap/countoffline" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="#ff0000"
        android:inputType="numberDecimal"
        android:layout_above="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_toEndOf="@+id/imageButton4" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SMV"
        android:textColor="#ff0000"
        android:layout_above="@+id/btnStop"
        android:layout_alignEnd="@+id/btnStop"
        android:layout_marginEnd="13dp" />

    <Chronometer
        android:id="@+id/chronometer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff0000"
        android:textSize="25dp"
        android:layout_above="@+id/imageButton3"
        android:layout_toStartOf="@+id/imageButton4" />

    <Button
        android:id="@+id/start_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="283dp"
        android:text="start_record"
        android:visibility="gone"/>


</RelativeLayout>
